<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="300px"
    android:layout_marginBottom="1dp"
    android:background="@color/mainBackground"
    android:onClick="initDetailsDailog"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackground">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/mainBackground"
            android:text="contact det"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/placeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place"
            android:gravity="center_vertical"
            android:textSize="10dp"
            android:layout_below="@id/title"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
           />
        <TextView
            android:id="@+id/placeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="placeValue"
            android:textSize="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="150dp"
            android:layout_alignBaseline="@id/placeName"
            />

        <TextView
            android:id="@+id/dateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:gravity="center_vertical"
            android:textSize="10dp"
            android:layout_below="@id/placeName"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/dateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dateValue"
            android:textSize="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="150dp"
            android:layout_alignBaseline="@id/dateName"
           />

    </RelativeLayout>
</android.support.v7.widget.CardView>